generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lecture {
  id    String @id @default(cuid())
  title String @unique
  text  String

  materials LectureMaterial[]

  @@map("lecture")
}

model LectureMaterial {
  id        String @id @default(cuid())
  title     String @unique
  file_link String

  lecture   Lecture @relation(fields: [lectureId], references: [id])
  lectureId String  @map("lecture_id")

  @@map("lecture_material")
}

model Quiz {
  id    String @id @default(cuid())
  title String

  questions    QuizQuestion[]
  usersAnswers UserAnswer[]
  usersQuizzes UserQuiz[]

  @@map("quiz")
}

model QuizQuestion {
  id              String @id @default(cuid())
  question        String
  correctAnswerId String @map("correct_answer_id")

  quiz   Quiz   @relation(fields: [quizId], references: [id])
  quizId String @map("quiz_id")

  answers QuestionAnswer[]

  @@map("quiz_question")
}

model QuestionAnswer {
  id   String @id @default(cuid())
  text String

  question   QuizQuestion @relation(fields: [questionId], references: [id])
  questionId String       @map("question_id")

  usersAnswers UserAnswer[]

  @@map("question_answer")
}

model User {
  id       String @id @default(cuid())
  login    String @unique
  password String

  usersAnswers UserAnswer[]
  usersQuizzes UserQuiz[]

  @@map("user")
}

model UserAnswer {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  question   Quiz   @relation(fields: [questionId], references: [id])
  questionId String @map("question_id")

  answer   QuestionAnswer @relation(fields: [answerId], references: [id])
  answerId String         @map("answer_id")

  isCorrect Boolean @default(false) @map("is_correct")

  @@map("user_answer")
}

model UserQuiz {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  quiz   Quiz   @relation(fields: [quizId], references: [id])
  quizId String @map("quiz_id")

  score Int

  @@map("user_quiz")
}
